.content {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  background: linear-gradient(to bottom, #40b3ff, #e8e8e8);
}
.content .container {
  background-color: #fff;
  border-radius: 6rpx;
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}
.content .container .title {
  display: flex;
  justify-content: space-between;
}
.content .container .title ._span {
  padding: 10rpx;
}
.content .scroll_list {
  background-color: #fff;
  border-radius: 6rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
}
.content .scroll_list .title {
  display: flex;
  justify-content: space-between;
}
.content .scroll_list .title ._span {
  padding: 10px;
}
.content .scroll_list .img {
  display: flex;
  width: 95%;
  margin: 0 auto;
}
.content .scroll_list .img ._img {
  display: block;
  width: 140rpx;
  padding-right: 10rpx;
}
.content .grid {
  width: 100%;
  margin-top: 10rpx;
}
.content .grid .grid_ {
  margin: 0 auto;
  background-color: #fff;
  width: 90%;
  border-radius: 6rpx;
  justify-content: space-around;
}
.content .grid .grid_ ._img {
  display: block;
  width: 50rpx;
  padding: 5rpx 5rpx;
}
.content .notice_ {
  margin-top: 400rpx;
  width: 100%;
}
.content .notice_ .notice_bar {
  margin: 0 auto;
  width: 85%;
  border-radius: 6rpx;
}
.content .uni-margin-wrap {
  width: 100%;
  position: absolute;
  margin-top: 100rpx;
}
.content .uni-margin-wrap .swiper {
  height: 280rpx;
}
.content .uni-margin-wrap .swiper .swiper-item {
  width: 90%;
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  margin: 0 auto;
}

