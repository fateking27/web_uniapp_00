{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom",
				// "enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": {
					"type": "transparent",
						"searchInput": {
							"backgroundColor": "#fff",
							"borderRadius": "15px",
							"placeholder": "请输入搜索内容",
							"align": "left"
						},
						"buttons": [{
							"type": "home",
							"fontWeight": "bold",
							"fontSize": "22px",
							"float": "left"
						}, {
							"type": "share",
							"fontWeight": "bold",
							"fontSize": "22px",
							"float": "right"
						}]
					}
				}
			}
		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类"
			}
		}, {
			"path": "pages/shopcart/shopcart",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"color": "#000000",
		"selectedColor": "#ff0000",
		"list": [{
				"iconPath": "/static/icon_cs.png",
				"pagePath": "pages/index/index",
				"selectedIconPath": "/static/icon_cs.png",
				"text": "首页"
			},
			{
				"iconPath": "/static/icon_fd.png",
				"pagePath": "pages/category/category",
				"selectedIconPath": "/static/icon_fd.png",
				"text": "分类"
			},
			{
				"iconPath": "/static/icon_gift.png",
				"pagePath": "pages/shopcart/shopcart",
				"selectedIconPath": "/static/icon_gift.png",
				"text": "购物车"
			},
			{
				"iconPath": "/static/icon_home.png",
				"pagePath": "pages/my/my",
				"selectedIconPath": "/static/icon_home.png",
				"text": "我的"
			}
		]
	},
	"uniIdRouter": {}
}